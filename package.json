{
  "name": "vault",
  "version": "2.3.0",
  "description": "Your private media sanctuary with AI companion",
  "author": "Vault Team",
  "private": true,
  "type": "module",
  "main": "out/main/main.js",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "dev:raw": "electron-vite dev",
    "build": "electron-vite build && electron-builder",
    "build:dir": "electron-vite build && electron-builder --dir",
    "build:local": "electron-vite build && electron-builder --config.npmRebuild=false",
    "watch": "node scripts/watch-build.mjs",
    "preview": "electron-vite preview"
  },
  "dependencies": {
    "@types/react-window": "^1.8.8",
    "animejs": "^4.3.5",
    "better-sqlite3": "^11.10.0",
    "canvas-confetti": "^1.9.4",
    "chokidar": "^3.6.0",
    "dlnacasts2": "^0.2.0",
    "electron-store": "^10.0.0",
    "fast-glob": "^3.3.2",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "gsap": "^3.14.2",
    "lucide-react": "^0.516.0",
    "nanoid": "^5.0.9",
    "onnxruntime-node": "^1.24.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^2.2.5",
    "sharp": "^0.34.5",
    "simplex-noise": "^4.0.3"
  },
  "devDependencies": {
    "@types/animejs": "^3.1.13",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.10.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "electron": "32.3.3",
    "electron-builder": "^24.13.3",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^5.4.21",
    "zod": "^4.1.11"
  },
  "build": {
    "appId": "com.vault.app",
    "productName": "Vault",
    "files": [
      "out/**/*",
      "package.json",
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg.exe"
      },
      {
        "from": "node_modules/ffprobe-static/bin/win32/x64/ffprobe.exe",
        "to": "ffprobe.exe"
      }
    ],
    "directories": {
      "output": "release"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/better-sqlite3/**",
      "**/ffmpeg-static/**",
      "**/ffprobe-static/**"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "V.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "Nwund",
      "repo": "vault-project"
    }
  }
}
